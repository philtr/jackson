= link_to "Create an Event", new_event_path, class: "btn btn-success"

- if @events.any?
  %h3 My Upcoming Events
  - @events.each do |event|
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = link_to event_path(event) do
            = event.name
            %small= event.starts_at.to_s(:long)
      .panel-body= markdownify(event.description)

