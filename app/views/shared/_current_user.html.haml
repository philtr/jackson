- if current_user?
  %li= link_to "Hi, #{ current_user.first_name }!", edit_profile_path
  %li= link_to "Sign Out", sign_out_path
- else
  %li.dropdown
    %a.dropdown-toggle{ href: "#", data: { toggle: "dropdown" } }
      Sign In
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to auth_path(:github) do
          %span.fa.fa-github
          Sign in with GitHub
      %li
        = link_to auth_path(:twitter) do
          %span.fa.fa-twitter
          Sign in with Twitter
      %li
        = link_to auth_path(:facebook) do
          %span.fa.fa-facebook
          Sign in with Facebook
